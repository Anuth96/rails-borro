<div class="main-container borro">
  <h2><strong> Chatrooms </strong></h2>
  <div class="white-card">
    <ul style="list-style-type:none;">
    <% if @chatrooms.count == 0 %>
      <p>Sorry, no chat history yet.</p>
    <% else %>
      <% @chatrooms.each do |chatroom| %>

        <% if chatroom.participants[0].user_id == current_user.id %>
          <p>  <%= image_tag(User.find(chatroom.participants[1].user_id).avatar_thumbnail, :class => "avatar") %>
             <strong> <%= link_to User.find(chatroom.participants[1].user_id).first_name, chatroom_path(chatroom) %></strong>
              <small> <i><%= chatroom.messages.last.content  %></i></small></p>

        <% else %>
         <p> <%= image_tag(User.find(chatroom.participants[0].user_id).avatar_thumbnail, :class => "avatar") %>
         <strong> <%= link_to User.find(chatroom.participants[0].user_id).first_name, chatroom_path(chatroom) %></strong></p>
        <% end %>
      <% end %>
    <% end %>
    </ul>
  </div>
</div>
