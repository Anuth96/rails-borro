<div style="width: 100%; height: 500px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
<div class="result-container borro">
<%= link_to "", 'javascript:history.back()', class:"fas fa-angle-left back-btn"%>
  <h3><strong><%= pluralize(@posts.count, "result") %> </strong>near you</h3>
      <% @posts.each do |post| %>
    <div class="white-card">
      <%= link_to post.title.capitalize, post_path(post) %>
      <p>Helper: <%= post.user.username %></p> <%# this line to be deleted %>
      <p>Location: <%= post.location %></p>
      <p>For up to <%= post.duration %> days</p>
    </div>
  <% end %>
</div>
