<div style="width: 100%; height: 500px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
<div class="result-container borro">
<%= link_to "", 'javascript:history.back()', class:"fas fa-angle-left back-btn"%>
  <h3><strong><%= pluralize(@posts.count, "result") %> </strong>near you</h3>
      <% @posts.each do |post| %>
    <div class="card-product">

      <% if post.photos.attached? == true %>
        <%= cl_image_tag post.photos.first.key, crop: :thumb, class:"d-block"%>
      <% else %>
        <img src="https://source.unsplash.com/random/?<%= post.title %>" />
      <% end %>

      <div class="card-product-infos">
        <h3><%= link_to post.title.upcase, post_path(post) %></h3>
        <p>For up to <%= post.duration %> days</p>
        </div>
    </div>
  <% end %>
</div>
