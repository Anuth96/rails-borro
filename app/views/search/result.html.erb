<div style="width: 100%; height: 500px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
<div class="main-container borro">
<%= link_to "", :back, class:"fas fa-angle-left back-btn"%>
  <h3><strong><h3><strong><%= pluralize(@posts.count, "Result") %> </strong>near you</h3> </strong>near you</h3>
      <% @posts.each do |post| %>
    <div class="white-card">
      <%= link_to post.title.capitalize, post_path(post) %>
      <p>Location: <%= post.location %></p>
      <p>For up to <%= post.duration %> days</p>
    </div>
  <% end %>
  <button type="button" class="btn btn-primary"><%=link_to "Back", pages_search_path%>
</div>
