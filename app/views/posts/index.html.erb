<div style="width: 100%; height: 500px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
<div class="main-container borro">
  <%= link_to "", 'javascript:history.back()', class:"fas fa-angle-left back-btn"%>
  <h3><strong><%=@posts.length%> results </strong>near you</h3>
  <% @posts.each do |post| %>

  <div class="card-product">
   <% if @post.photos.attached? == true %>
        <div class="carousel-item active">
          <%= cl_image_tag @post.photos.first.key, crop: :thumb, class:"d-block w-100"%>
        </div>
        <% else %>

      <div>
      </div>

      <% end %>
  <div class="card-product-infos">
    <%= link_to post.title.capitalize, post_path(post) %>
    <p>Location: <%= post.location %></p>
    <p>For up to <%= post.duration %> days</p>
  </div>
  <% end %>

</div>
