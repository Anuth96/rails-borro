<div class="main-container borro">
<%= link_to "", :back, class:"fas fa-angle-left back-btn"%>
<br>
  <h3><strong>They can borrow:</strong></h3>
    <div class="white-card">
    <%= simple_form_for(@post) do |f| %>
      <%= f.input :title %>
      <%= f.input :category, as: :radio_buttons, collection: [['product', 'product'], ['service', 'service']], input_html: { class: 'my-class' }%>
      <%= f.input :description %>
      <%= f.input :location,
              input_html: { data: { geocoder_target: "location" }, class: "d-none"},
              wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
      <%= f.input :duration %>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
      <%= f.submit button_name, class: "btn btn-primary" %>
  <% end %>
  </div>
</div>
