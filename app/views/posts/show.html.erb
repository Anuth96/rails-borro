<h1><%= @post.title %></h1>
  <p><%= @post.category %></p>
  <p><%= @post.description %></p>
  <p><%= @post.location %></p>
  <p><%= @post.duration %></p>

  <div style="width: 2500px; height: 250px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<p><%= link_to "Back to list", posts_path %></p>
<button type="button" class="btn btn-success"><%= link_to "Book", new_post_booking_path(@post) %></button>
<button type="button" class="btn btn-success"><%= link_to "Edit", edit_post_path(@post) %></button>
<button type="button" class="btn btn-danger"><%=link_to "Delete",
                    post_path(@post),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %></button>
