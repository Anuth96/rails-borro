<div class="main-container borro">
    <h2><strong><%=@post.title.capitalize %></strong></h2>
    <p><%= @post.description.capitalize %></p>

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <% @post.photos.each do |photo| %>
        <img class="d-block w-100" <%= cl_image_tag photo.key, crop: :thumb %> <% end %> >
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="https://source.unsplash.com/random/?<%= @post.title %>" alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="https://source.unsplash.com/random/?<%= @post.title %>" alt="Third slide">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

    <div class="white-card">
      <p><%= @post.user.username %></p>
        <div style="width: 100%; height: 250px;"
              data-controller="mapbox"
              data-mapbox-markers-value="<%= @markers.to_json %>"
              data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>

  <button type="button" class="btn btn-primary"><%=link_to "Back", pages_search_path%>
  <button type="button" class="btn btn-success"><%= link_to "CHECK AVAILABILITIES", new_post_booking_path(@post) %></button>
  <button type="button" class="btn btn-success"><%= link_to "Edit", edit_post_path(@post) %></button>
  <button type="button" class="btn btn-danger"><%=link_to "Delete",
                      post_path(@post),
                      method: :delete,
                      data: { confirm: "Are you sure?" } %></button>

<% @post.photos.each do |photo| %>
  <%= cl_image_tag photo.key, crop: :thum %>
<% end %>
</div>
