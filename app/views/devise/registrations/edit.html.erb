<div class="main-container borro">
<%= link_to "", 'javascript:history.back()', class:"fas fa-angle-left back-btn"%>
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

  <div class="avatar">
       <%= image_tag(current_user.avatar_thumbnail, :class => "avatar-large") %>
  </div>

  <div class="avatar">
    <%= f.file_field :avatar %>
  </div>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      <%= f.input :username, required: true, autofocus: true %>
      <%= f.input :phone_number, required: true, autofocus: true %>
      <%= f.input :address,
      input_html: { data: { geocoder_target: "location" }, class: "d-none"},
       wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } },
      required: true, autofocus: true %>
      <%= f.input :password,
                  hint: "leave it blank if you don't want to change it",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :current_password,
                  hint: "we need your current password to confirm your changes",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
    </div>


    <p><div class="form-actions btn btn-primary">
      <%= f.button :submit, "Update"%>
    </p>
  <% end %>
  </br>
  <h3>Account Termination</h3>
  <h2>Cancel my account</h2>
  <p>Unhappy? 
  <div class="btn btn-success">
  <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></div></p>

</div>
