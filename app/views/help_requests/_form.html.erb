<div class="main-container borro">
  <div class="character-container">
    <%= image_tag("characters/helprequest-new.png") %>
  </div>
  <%= simple_form_for(@help_request) do |f| %>
      <%= f.input :title %>
      <%= f.input :category, :collection => %w[product service]%>

      <%=f.input :description, hint: "Introduce yourself and explain why you need help." %>
      <%= f.input :location,
              input_html: { data: { geocoder_target: "location" }, class: "d-none"},
              wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
      <%= f.input :duration %>
      <%= f.submit name: button_name, class: "btn btn-primary" %>
      <%= f.button :button do %>
      <button type="button" class="btn btn-danger"><%= link_to "BACK", help_requests_path %></button>
      <% end %>
  <% end %>
</div>
