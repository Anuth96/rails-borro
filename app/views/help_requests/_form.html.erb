<div class="main-container">
  <%= simple_form_for(@help_request) do |f| %>
      <%= f.input :title %>
      <%= f.input :category, :collection => %w[product service]%>
      <%= f.input :description %> <p>Introduce yourself and explain why you need help.</p>
      <%= f.input :location %>
      <%= f.input :duration %>
      <%= f.submit name: button_name, class: "btn btn-primary" %>
      <%= f.button :button do %>
      <button type="button" class="btn btn-danger"><%= link_to "Back", help_requests_path %></button>
      <% end %>
  <% end %>
</div>
