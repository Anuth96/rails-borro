<h1>BOOKINGS SHOW </h1>
<p> Thanks for you booking </p>
<p><%= @booking.status.upcase %> BY <%=@booking.post.user.username.upcase %></p>
<strong><%=@booking.post.title.upcase %></strong>
<p><%= @booking.post.location %></p>
<p><%= @booking.start_time.to_time.strftime('%B %e at %l:%M %p')%></p>

<p><%= link_to "Back to posts", posts_path %></p>
<button type="button" class="btn btn-success"><%= link_to "Edit", edit_post_booking_path(@booking) %></button>
<button type="button" class="btn btn-danger"><%=link_to "Cancel",
                        post_booking_path(@booking),
                        method: :delete,
                        data: { confirm: "Are you sure?" } %></button>
